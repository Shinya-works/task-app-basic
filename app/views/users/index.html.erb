<% provide(:title, "users") %>

<div class="container">
  <h1>利用者一覧</h1>
  <div class="row">
    <div class="col-md-10 col-offset-1">
      <%= will_paginate %>
      <table class="table table-condensed table-hover" id="table-users">
        <thead>
          <tr>
            <th><%= User.human_attribute_name :name %></th>
          </tr>
        </thead>
        
        <% @users.each do |user| %>
         <tr>
           <% if user.admin? %> 
           <td><%= link_to user.name, user %><span class="label label-primary label-division">管理者</span></td>
           <% else %>
           <td><%= link_to user.name, user %><span class="label label-success label-division">一般</span></td>
           <td><%= link_to "削除", user_path(user.id), method: :DELETE, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-sm btn-danger pull-right" %></td>
           <% end %>
           
         </tr>
        <% end %>
      </table>
      <%= will_paginate %>
    </div>
  </div>
</div>