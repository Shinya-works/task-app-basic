<% provide(:title, 'Update Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user, @task), local: true, method: :patch) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name, class: "label-new-task" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :detail, class: "label-new-task" %>
      <%= f.text_area :detail, rows: 5, class: "form-control" %>
      <%= f.submit "更新", class: "btn btn-md btn-primary pullbtn-block btn-form" %>
      <%= link_to "キャンセル", user_task_path(@user, @task), class: "btn btn-md btn-default pullbtn-block btn-form" %>
    <% end %>
  </div>
</div>
