<% provide(:title, 'Update Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, local: true) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      
      <%= f.label :name, class: "label-new-task" %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :deteil, class: "label-new-task" %>
      <%= f.text_area :deteil, rows: 5, class: "form-control" %>
      <%= f.submit "更新", class: "btn btn-md btn-primary pullbtn-block btn-form" %>
    <% end %>
  </div>
</div>
