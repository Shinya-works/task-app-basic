<% provide(:title, 'Update Task') %>
<% provide(:class_text, 'task--edit') %>

<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= render 'form' %> 
    <%= form_with(model: @task, local: true) do |f| %>
      <%= render 'shared/error_messages', boject: @task %>
      <%= f.submit "更新", class: "btn btn-md btn-primary pullbtn-block btn-task--edit" %>
      <%= link_to "キャンセル",tasks_path, class: "btn btn-md btn-default pullbtn-block btn-task--edit" %>
    <% end %>
  </div>
</div>
