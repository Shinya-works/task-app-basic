<% provide(:title, current_user.name) %>
<h1><%= current_user.name %>のタスク一覧</h1>
<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <%= link_to "タスク新規作成", new_user_task_path(@user), class: "btn btn-lg btn-primary pull-right" %>
        <table class="table table-hover", id="table-tasks">
          <thead>
            <tr>
              <th>名称</th>
              <th>作成日</th>
              <th></th>
            </th>
          </thead>
          
          <tdody>
            <% @tasks.each do |task| %>
              <tr>
                <td class="tasks-name"><%= link_to task.name, user_task_path(@user, task.id) %></td>
                <td><%= l(task.created_at, format: :long) %></td>
                <td>
                  <%= link_to "編集", edit_user_task_path(@user, task.id),class: "btn btn-success" %> 
                  <%= link_to "削除", user_task_path(@user, task.id), method: :delete, data: { confirm: "削除してよろしいですか？" }, class: "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tdody>
        </table>
    </div>
  </div>
</div>