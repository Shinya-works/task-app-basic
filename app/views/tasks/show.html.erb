<% provide(:title, current_user.name) %>

<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered", id="table-task">
      <tr><th class="active col-md-2">ID</th><td class="col-md-10"><%= @task.id %></td></tr>
      <tr><th class="active">名称</th><td><%= @task.name %></td></tr>
      <tr><th class="active">詳細</th><td><%= text_url_to_link(h(@task.deteil)).html_safe %></td></tr>
      <tr><th class="active">作成日</th><td><%= l(@task.created_at, format: :long) %></td></tr>
      <tr><th class="active">更新日</th><td><%= l(@task.updated_at, format: :long) %></td></tr>
    </table>
    <%= link_to"編集", edit_task_path(@task.id), class: "btn btn-lg btn-success btn-task-show" %> 
    <%= link_to"削除", task_path(@task.id), method: :DELETE, date: { confirm: "削除してよろしいですか。"}, class: "btn btn-lg btn-danger btn-task-show" %> 
  </div>
</div>
